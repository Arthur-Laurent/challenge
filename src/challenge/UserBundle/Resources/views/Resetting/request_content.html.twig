{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <div class="col-lg-4 col-lg-offset-4">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-group">

                {% if invalid_username is defined %}
                    <h4 class="control-label">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</h4>

                    <div class="form-group has-error has-feedback">
                        <label class="control-label" for="username">{{ 'resetting.request.username'|trans }}</label>
                        <input class="form-control" type="text" id="username" name="username" required="required" />
                        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                    </div>

                    <div class="row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-6"><input class="btn-success btn btn-lg btn-block" type="submit" value="{{ 'resetting.request.submit'|trans }}" /></div>
                        <div class="col-lg-3"></div>


                    </div>
                    {% else %}
                        <div class="form-group">
                            <label class="control-label" for="username">{{ 'resetting.request.username'|trans }}</label>
                            <input class="form-control" type="text" id="username" name="username" required="required" />
                        </div>

                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-6"><button class="btn-success btn btn-lg btn-block" type="submit"><i class="fa fa-unlock"></i> {{ 'resetting.request.submit'|trans }}</button> </div>
                            <div class="col-lg-3"></div>


                        </div>
                {% endif %}

        </form>
    </div>
</div>